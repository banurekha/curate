<% fieldset_class  ||= '' %>
<% select_label_id ||= '' %>

<%= form_tag add_member_organizations_path, method: :put do %>
  <fieldset class="required <%= fieldset_class %>">
    <%= hidden_field_tag :collectible_id, collectible.pid %>

    <div class="control-group collection_id organization_id">
      <div class="controls">
        <% options = "" %>
        <% organizations = available_organizations(collectible) %>
        <% if organizations.any? -%>
          <% options << '<optgroup label="Your Organizations">'.html_safe %>
          <% options << options_from_collection_for_select(organizations, "pid", "title") %>
          <% options << '</optgroup>'.html_safe %>
        <% end %>
        <%= select_tag :organization_id, options, prompt: 'Make a Selection', class: 'input-xlarge', :'aria-labelledby' => select_label_id %>
      </div>
    </div>

  </fieldset>
  <div class="form-actions">
    <%= submit_tag "Add It!", class: 'btn btn-primary' %>
    <%= link_to 'never mind', root_path, class: 'btn btn-link', data: { dismiss: 'modal' } %>
  </div>
<% end %>
